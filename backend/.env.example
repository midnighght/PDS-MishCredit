# puerto del backend
PORT=3000

# mongo local por defecto
MONGO_URI=mongodb://localhost:27017/planificador

# cors restringido al frontend por defecto (vite y docker)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# limites de body
BODY_LIMIT=1mb

# swagger habilitado en dev; en prod puedes poner false
SWAGGER_ENABLED=true

# integraciones UCN (reales)
UCN_BASE_PUCLARO=https://puclaro.ucn.cl/eross/avance
UCN_BASE_HAWAII=https://losvilos.ucn.cl/hawaii/api
HAWAII_AUTH=jf400fejof13f

# usar stubs locales para pruebas sin red
USE_STUBS=true

# usar respaldos si falla upstream UCN
USE_BACKUP_FALLBACK=true

# clave para endpoints protegidos (oferta csv y respaldos)
# cambia este valor en tu entorno real
ADMIN_API_KEY=cambia-esta-clave
